<div class="container show-container">
  <div class="superhero-show-header-content px-4 py-1">
  <h1 style="font-family:'Russo One, sans-serif'"><%= @superhero.name %></h1>
  <div class="flexbox superhero-header-nav d-flex justify-content-between">
    <div class="flexbox d-flex">
      <div><i class="far fa-star"> 4.8</i></div>
      <div class="hero-city ml-3"><span><%= @superhero.city %>, United States</span></div>
    </div>
    <div class="save-share-icons d-flex flex-row">
     <div class="share-icon mr-2"> <i class="far fa-share-square"> Share</i></div>
      <div class="favorite-icon"><i class="far fa-heart"> Save</i></div>
    </div>
  </div>
</div>

<div class="flexbox photo-booking-container d-flex justify-content-between">
  <div class="container superman-carousel ml-1 mt-3" style="overflow:hidden">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner w-100">
      <div class="carousel-item active">
        <img class="d-block w-100 container-fluid img-fluid" src="https://thumbor.forbes.com/thumbor/fit-in/1200x0/filters%3Aformat%28jpg%29/https%3A%2F%2Fblogs-images.forbes.com%2Fjvchamary%2Ffiles%2F2016%2F03%2Fman_of_steel-1200x800.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 container-fluid img-fluid" src="https://i.ytimg.com/vi/AWDvme_vuV0/hqdefault.jpg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 container-fluid img-fluid" src="https://www.superherohype.com/assets/uploads/2019/12/premium-superman-featured-1280x720.jpg"  alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
 </div>

<div class="container book-form-container" style="width: 480px";>
  <div class="book-sidebar mt-4 py-4 ml-2" style="width: 460px; border: 1px solid rgb(221, 221, 221); border-radius: 12px; padding: 24px; box-shadow: rgba(0, 0, 0, 0.12) 0px 6px 16px;">
     <div id="book-sidebar-date">
       <div class="book-price-row">
        <div class="book-price-rating d-flex justify-content-between mt-0">
          <span><strong>$<%= @superhero.hourly_price %></strong>/hour</span>
           <i class="far fa-star">4.8</i>
        </div>
       </div>
       <div>
        <form>
          <div class="form-group" style="font-family:'Work Sans, Helvetica, sans-serif'">
            <label for="exampleInputEmail1"></label>
            <input type="date" class="form-control" id="exampleInputDate" aria-describedby="dateHelp" placeholder="Date">
          </div>
          <div class="form-group" style="font-family:'Work Sans, Helvetica, sans-serif'">
            <label for="exampleInputEvent"></label>
            <input type="text" class="form-control" id="exampleInputEvent" placeholder="Event">
          </div>
          <div class="form-group" style="font-family:'Work Sans, Helvetica, sans-serif'">
            <label for="exampleInputLocation"></label>
            <input type="text" class="form-control" id="exampleInputLocation" placeholder="Location">
          </div>
          <button type="book" class="btn dark-rd-btn w-100 mt-2">Book</button>
         </form>
       </div>
     </div>
  </div>
</div>
</div>

